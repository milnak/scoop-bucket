    "$post_install": "Remove-Item \"$dir\\extracted\" -Force -Recurse",
    "shortcuts": [
        [
            "midiox.exe",
            "MIDI-OX"
        ]
    ],
    "checkver": {
        "url": "http://www.midiox.com/app.htm",
        "regex": "Download: MIDI-OX ([\\d.]+)</a>"
